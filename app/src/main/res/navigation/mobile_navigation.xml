<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/splashFragment">

  <fragment
      android:id="@+id/navigation_home"
      android:name="com.chromatics.callerID.ui.home.HomeFragment"
      android:label="@string/home"
      tools:layout="@layout/fragment_home" >
    <action
        android:id="@+id/action_navigation_home_to_splashFragment"
        app:destination="@id/splashFragment"
        app:launchSingleTop="true"
        app:popUpTo="@+id/mobile_navigation"
        app:popUpToInclusive="true"/>
  </fragment>

  <fragment
      android:id="@+id/navigation_menu"
      android:name="com.chromatics.callerID.ui.menu.MenuFragment"
      android:label="@string/menu"
      tools:layout="@layout/fragment_menu" >

    <action
        android:id="@+id/action_navigation_menu_to_navigation_dashboard"
        app:destination="@id/navigation_dashboard"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right"/>
    <action
        android:id="@+id/action_navigation_menu_to_splashFragment"
        app:destination="@id/splashFragment"
        app:launchSingleTop="true"
        app:popUpTo="@+id/mobile_navigation"
        app:popUpToInclusive="true"/>
  </fragment>

  <fragment
      android:id="@+id/navigation_notification"
      android:name="com.chromatics.callerID.ui.notifications.NotificationsFragment"
      android:label="@string/notes"
      tools:layout="@layout/fragment_notifications" />
  <fragment
      android:id="@+id/splashFragment"
      android:name="com.chromatics.callerID.ui.splash.SplashFragment"
      android:label="splash_fragment"
      tools:layout="@layout/splash_fragment" >
    <action
        android:id="@+id/action_splashFragment_to_activationFragment"
        app:destination="@id/activationFragment"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right"/>
    <action
        android:id="@+id/action_splashFragment_to_navigation_dashboard"
        app:destination="@id/navigation_dashboard"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right" />
    <action
        android:id="@+id/action_splashFragment_to_loginFragment"
        app:destination="@id/loginFragment"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right"/>
  </fragment>

  <fragment
      android:id="@+id/loginFragment"
      android:name="com.chromatics.callerID.ui.login.LoginFragment"
      android:label="LoginFragment"
      tools:layout="@layout/login_fragment">
    <action
        android:id="@+id/action_loginFragment_to_navigation_dashboard"
        app:destination="@id/navigation_dashboard"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right"/>
  </fragment>
  <fragment
      android:id="@+id/navigation_notes"
      android:name="com.chromatics.callerID.ui.notes.NotesFragment"
      android:label="Notes"
      tools:layout="@layout/notes_fragment">
    <action
        android:id="@+id/action_navigation_notes_to_createEditNoteFragment"
        app:destination="@id/createEditNoteFragment"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right"/>
  </fragment>
  <fragment
      android:id="@+id/createEditNoteFragment"
      android:name="com.chromatics.callerID.ui.createEditNote.CreateEditNoteFragment"
      android:label="CreateEditNoteFragment"
      tools:layout="@layout/create_edit_note_fragment"/>
  <fragment
      android:id="@+id/navigation_dashboard"
      android:name="com.chromatics.callerID.ui.dashboard.DashboardFragment"
      android:label="dashboard_fragment"
      tools:layout="@layout/dashboard_fragment" >
    <action
        android:id="@+id/action_navigation_dashboard_to_splashFragment"
        app:launchSingleTop="true"
        app:popUpTo="@+id/mobile_navigation"
        app:popUpToInclusive="true"
        app:destination="@id/splashFragment" />
  </fragment>
  <fragment
      android:id="@+id/skillFragment"
      android:name="com.chromatics.callerID.ui.skill.SkillFragment"
      android:label="SkillFragment"
      tools:layout="@layout/skill_fragment">
    <action
        android:id="@+id/action_skillFragment_to_splashFragment"
        app:destination="@id/splashFragment"
        app:launchSingleTop="true"
        app:popUpTo="@+id/mobile_navigation"
        app:popUpToInclusive="true"/>
  </fragment>
  <fragment
      android:id="@+id/serviceFragment"
      android:name="com.chromatics.callerID.ui.service.ServiceFragment"
      android:label="ServiceFragment"
      tools:layout="@layout/fragment_service"/>
  <fragment
      android:id="@+id/agentStatesFragment"
      android:name="com.chromatics.callerID.ui.agentStates.AgentStatesFragment"
      android:label="fragment_agent_states"
      tools:layout="@layout/fragment_agent_states" />
  <fragment
      android:id="@+id/activationFragment"
      android:name="com.chromatics.callerID.ui.activation.ActivationFragment"
      android:label="ActivationFragment"
      tools:layout="@layout/activation_fragment">
    <action
        android:id="@+id/action_activationFragment_to_loginFragment"
        app:destination="@id/loginFragment"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right"/>
  </fragment>


</navigation>